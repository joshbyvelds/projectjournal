<div class="grid_item">
    <div class="top">
        <div class="project_thumbnail" style='background-image: url("images/updates/{{ image }}");'></div>
        <div class="top_text">
            <div class="name">{{ title }}</div>
            <div class="time_spent"><i class="far fa-clock"></i> <span>{{ time }}</span></div>
        </div>
    </div>
    <div class="bottom">
        <div class="last_updated"><i class="fas fa-calendar-alt"></i> {{ date|raw }}</div>
        <div class="category_icon category_{{ category }}"></div>
    </div>
</div>